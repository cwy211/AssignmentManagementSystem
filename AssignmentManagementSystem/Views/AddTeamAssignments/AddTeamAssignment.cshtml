@model AssignmentManagementSystem.Models.Assignment
@{
    ViewData["Title"] = "AddTeamAssignment";
}

<center>
    <h1>Add Team To Assignment</h1>
    <br />
    <form asp-action="AddTeamAssignment" asp-controller="AddTeamAssignments" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <table>
            <tr>
                <th>Assignment ID</th>
                <td>
                    <div class="form-group">
                        <input asp-for="AssignmentId" class="form-control" readonly />
                        <span asp-validation-for="AssignmentId" class="text-danger"></span>
                    </div>
                </td>
            </tr>

            <tr>
                <td colspan="2" style="text-align:center">
                    <input type="submit" name="submit" value="Add" />
                </td>
            </tr>

        </table>
    </form>
</center>