@model AssignmentManagementSystem.Models.Task

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>Details</h1>

<div>
    <h4>Task</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TaskId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaskId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TaskName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TaskName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TeamAssignmentId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TeamAssignmentId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssignmentId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssignmentId)
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Users.firstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SubmissionDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubmissionDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SubmitStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubmitStatus)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TaskId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index"><button class="btn btn-primary">Back to List</button></a>
    </form>
</div>


